= form_for(@article) do |f|
  - if @article.errors.any?
    #error_explanation
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited this article from being saved:
      %ul
        - @article.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :status_id
    %br/
    = f.text_field :status_id
  .field
    = f.label :visibility_id
    %br/
    = f.text_field :visibility_id
  .field
    = f.label :created_by_id
    %br/
    = f.text_field :created_by_id
  .field
    = f.label :updated_by_id
    %br/
    = f.text_field :updated_by_id
  .field
    = f.label :deleted_by_id
    %br/
    = f.text_field :deleted_by_id
  .field
    = f.label :folder_id
    %br/
    = f.text_field :folder_id
  .field
    = f.label :template_id
    %br/
    = f.text_field :template_id
  .actions
    = f.submit
