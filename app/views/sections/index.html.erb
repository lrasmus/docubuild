<p id="notice"><%= notice %></p>

<h1>Listing Sections</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th>Visibility</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th>Deleted by</th>
      <th>Article</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.title %></td>
        <td><%= section.content %></td>
        <td><%= section.status %></td>
        <td><%= section.visibility %></td>
        <td><%= section.created_by %></td>
        <td><%= section.updated_by %></td>
        <td><%= section.deleted_by %></td>
        <td><%= section.article %></td>
        <td><%= section.order %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

