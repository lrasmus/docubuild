%p#notice= notice
%h1 Listing Visibilities
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @visibilities.each do |visibility|
      %tr
        %td= visibility.name
        %td= link_to 'Show', visibility
        %td= link_to 'Edit', edit_visibility_path(visibility)
        %td= link_to 'Destroy', visibility, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Visibility', new_visibility_path
