= form_for(@document) do |f|
  - if @document.errors.any?
    #error_explanation
      %h2
        = pluralize(@document.errors.count, "error")
        prohibited this document from being saved:
      %ul
        - @document.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :status_id
    %br/
    = f.text_field :status_id
  .field
    = f.label :visibility_id
    %br/
    = f.text_field :visibility_id
  .field
    = f.label :created_by
    %br/
    = f.text_field :created_by
  .field
    = f.label :updated_by
    %br/
    = f.text_field :updated_by
  .field
    = f.label :deleted_by
    %br/
    = f.text_field :deleted_by
  .field
    = f.label :folder_id
    %br/
    = f.text_field :folder_id
  .field
    = f.label :template_id
    %br/
    = f.text_field :template_id
  .actions
    = f.submit
