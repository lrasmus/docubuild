:javascript
  function updatePreview() {
    $(".font_preview").css("font-family", $(".font_name_select select option:selected").val());
    $(".font_preview").css("font-size", $(".font_size_select select option:selected").val() + "pt");
    $(".font_preview").css("color", $(".font_color_select input").val());
  }

  $(function() {
    $('.font_name_select select').change(function(){
      updatePreview();
    });
    $('.font_size_select select').change(function(){
      updatePreview();
    });
    $('.font_color_select input').change(function(){
      updatePreview();
    });

    updatePreview();
  });
