= form.fields_for :style do |style_form|
  .font_details
    .font_name_select
      = style_form.select(:font_name, options_for_select(font_list(), document.style["font_name"]))
    .font_size_select
      = style_form.select(:font_size, options_for_select(font_size_list(), document.style["font_size"]))
    .font_color_select
      = style_form.color_field :font_color, :value => document.style["font_color"]

