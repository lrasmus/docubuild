:javascript
  function updatePreview() {
    $(".font_preview h1").css("font-family", $(".document_font_details .font_name_select select option:selected").val());
    $(".font_preview h1").css("font-size", $(".document_font_details .font_size_select select option:selected").val() + "pt");
    $(".font_preview h1").css("color", $(".document_font_details .font_color_select input").val());
    $(".font_preview h2").css("font-family", $(".section_font_details .font_name_select select option:selected").val());
    $(".font_preview h2").css("font-size", $(".section_font_details .font_size_select select option:selected").val() + "pt");
    $(".font_preview h2").css("color", $(".section_font_details .font_color_select input").val());
    $(".font_preview .text").css("font-family", $(".text_font_details .font_name_select select option:selected").val());
    $(".font_preview .text").css("font-size", $(".text_font_details .font_size_select select option:selected").val() + "pt");
    $(".font_preview .text").css("color", $(".text_font_details .font_color_select input").val());
  }

  $(function() {
    $('.font_name_select select, .font_size_select select, .font_color_select input').change(function(){
      updatePreview();
    });

    updatePreview();
  });
