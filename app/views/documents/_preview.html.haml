:css
  .dub-section-content {
    font-family: "#{@document.style['font_name']}";
    color: #{@document.style['font_color']};
    font-size: #{@document.style['font_size']}pt;
  }

  .dub-document-title {
    font-family: "#{@document.style['document_font_name']}";
    color: #{@document.style['document_font_color']};
    font-size: #{@document.style['document_font_size']}pt;
  }

  .dub-section-title {
    font-family: "#{@document.style['section_font_name']}";
    color: #{@document.style['section_font_color']};
    font-size: #{@document.style['section_font_size']}pt;
  }


.dub-document-content
  =image_tag(document_file_path(@document.logo_file)) if @document.logo_file.persisted?
  %h1.dub-document-title=@document.title
  - @document.sections.each do |section|
    .dub-section
      %h2.dub-section-title=section.title
      .dub-section-content=section.content.html_safe